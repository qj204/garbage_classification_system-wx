/* pages/tipsDetail/tipsDetail.wxss */
.detail-container {
  position: relative;
  height: 100vh;
  background-image: url('/images/bg-pattern.png');
  background-size: cover;
}

.back-button {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  z-index: 100;
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.content-scroll {
  padding: 0;
}

.loading-container, .error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.loading-icon, .error-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}

/* 文章头部样式 */
.article-header {
  position: relative;
  height: 500rpx;
  overflow: hidden;
}

.detail-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.header-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(0,0,0,0.1), rgba(0,0,0,0.6));
}

.header-content {
  position: absolute;
  bottom: 60rpx;
  left: 40rpx;
  right: 40rpx;
}

.detail-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.5);
  margin-bottom: 20rpx;
  display: block;
}

.meta-info {
  display: flex;
  align-items: center;
}

.detail-date, .detail-author {
  font-size: 26rpx;
  color: #e0c9a6;
  margin-right: 30rpx;
}

/* 文章内容样式 */
.article-content {
  padding: 40rpx;
  background-color: #fff;
  margin: -50rpx 30rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 2;
  border: 1rpx solid #e0c9a6;
}

.article-content p {
  font-size: 30rpx;
  color: #5a3e36;
  line-height: 1.8;
  margin-bottom: 40rpx;
}

/* 装饰元素 */
.decoration-element {
  position: absolute;
  width: 150rpx;
  height: 150rpx;
  background-image: url('/images/ornament-pattern.png');
  background-size: contain;
  opacity: 0.15;
  z-index: 1;
}

.top-left {
  top: 100rpx;
  left: 0;
}

.top-right {
  top: 100rpx;
  right: 0;
  transform: rotate(90deg);
}

.bottom-left {
  bottom: 100rpx;
  left: 0;
  transform: rotate(270deg);
}

.bottom-right {
  bottom: 100rpx;
  right: 0;
  transform: rotate(180deg);
}

/* 分享按钮 */
.share-button {
  position: fixed;
  bottom: 60rpx;
  right: 60rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #d4a762;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.2);
  z-index: 10;
}

.share-icon {
  width: 50rpx;
  height: 50rpx;
}