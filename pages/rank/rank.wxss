/* pages/rank/rank.wxss */
.container {
  position: relative;
  min-height: 100vh;
  background-color: #f5f7fa;
  padding-bottom: 30rpx;
}

/* 背景装饰元素 */
.bg-decorations {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 0;
}

.bubble {
  position: absolute;
  border-radius: 50%;
  background: rgba(100, 200, 255, 0.1);
}

.bubble-1 {
  width: 300rpx;
  height: 300rpx;
  top: -100rpx;
  right: -100rpx;
}

.bubble-2 {
  width: 200rpx;
  height: 200rpx;
  bottom: 100rpx;
  left: -50rpx;
}

.bubble-3 {
  width: 150rpx;
  height: 150rpx;
  bottom: 300rpx;
  right: 50rpx;
}

/* 积分卡片 */
.points-card {
  position: relative;
  margin: 30rpx;
  height: 180rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #6e8efb, #a777e3);
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  z-index: 1;
}

.card-content {
  position: relative;
  padding: 30rpx;
  z-index: 2;
}

.points-label {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.points-value {
  display: block;
  font-size: 60rpx;
  font-weight: bold;
  color: #fff;
  margin-top: 10rpx;
}

