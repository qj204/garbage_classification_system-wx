.container {
  padding: 20px;
}

.header {
  text-align: center;
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 30px;
  color: #09BB07;
}

.form {
  display: flex;
  flex-direction: column;
  gap: 25px;
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.label {
  font-size: 16px;
  color: #333;
}

input {
  border: 1px solid #ddd;
  padding: 12px;
  border-radius: 6px;
  font-size: 15px;
}

.hint {
  font-size: 12px;
  color: #999;
  margin-top: 4px;
}

button {
  margin-top: 30px;
  background-color: #09BB07;
  color: white;
  border-radius: 6px;
}