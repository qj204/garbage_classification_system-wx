<view class="container">
  <view class="header">
    <text>修改密码</text>
  </view>

  <view class="form">
    <!-- 当前密码 -->
    <view class="form-item">
      <text class="label">当前密码</text>
      <input 
        type="password" 
        password 
        placeholder="请输入当前密码" 
        bindinput="handleCurrentPassword" 
      />
    </view>

    <!-- 新密码 -->
    <view class="form-item">
      <text class="label">新密码</text>
      <input 
        type="password" 
        password 
        placeholder="6位数字字母+2位字母" 
        bindinput="handleNewPassword" 
      />
      <text class="hint">示例：abc123XY</text>
    </view>

    <!-- 确认新密码 -->
    <view class="form-item">
      <text class="label">确认新密码</text>
      <input 
        type="password" 
        password 
        placeholder="请再次输入新密码" 
        bindinput="handleConfirmPassword" 
      />
    </view>

    <button type="primary" bindtap="submit">确认修改</button>
  </view>
</view>