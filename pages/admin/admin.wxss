.container {
  padding: 20px;
}

.header {
  text-align: center;
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 20px;
}

.section {
  margin-bottom: 30px;
  border-bottom: 1px solid #eee;
  padding-bottom: 15px;
}

.title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
  color: #09BB07;
}

.user-selector {
  border: 1px solid #ccc;
  padding: 10px;
  border-radius: 4px;
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
}

.user-list {
  border: 1px solid #eee;
  margin-top: 5px;
  max-height: 300px;
  overflow-y: auto;
}

.user-list view {
  padding: 10px;
  border-bottom: 1px solid #eee;
}

.input-group {
  margin-top: 15px;
}

.input-group input {
  border: 1px solid #ccc;
  padding: 10px;
  margin-bottom: 10px;
  border-radius: 4px;
  width: 100%;
  box-sizing: border-box;
}

button {
  margin-top: 10px;
}