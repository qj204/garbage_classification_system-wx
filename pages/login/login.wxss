.container {
  padding: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 60rpx;
}

.input-group {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

input {
  border: 1rpx solid #ddd;
  padding: 20rpx;
  border-radius: 8rpx;
}

button {
  margin-top: 40rpx;
}

.toggle-mode {
  margin-top: 30rpx;
  text-align: center;
  color: #576b95;
  text-decoration: underline;
}

/* 状态提示样式 */
.status-box {
  margin-top: 50rpx;
  min-height: 80rpx;
}

.status-loading {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #888;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.status-success {
  color: #09BB07;
  text-align: center;
}

.status-error {
  color: #E64340;
  text-align: center;
}