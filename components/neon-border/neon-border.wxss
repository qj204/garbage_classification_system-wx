.neon-border {
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
}

.neon-border::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border: 1px solid var(--color, #00ffff);
  border-radius: inherit;
  box-shadow: 0 0 10px var(--color, #00ffff), 0 0 20px var(--color, #00ffff);
  pointer-events: none;
  z-index: 1;
  opacity: 0.8;
  animation: neon-flicker 2s infinite alternate;
}

@keyframes neon-flicker {
  0%, 19%, 21%, 23%, 25%, 54%, 56%, 100% {
    opacity: 0.8;
  }
  20%, 22%, 24%, 55% {
    opacity: 0.6;
  }
}